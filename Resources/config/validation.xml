<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Brammm\UserBundle\Entity\User">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">email</option>
            <option name="message">An account with this email already exists.</option>
            <option name="groups">
                <value>register</value>
            </option>
        </constraint>
        <property name="email">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>register</value>
                </option>
            </constraint>
            <constraint name="Email">
                <option name="checkMX">true</option>
                <option name="groups">
                    <value>register</value>
                </option>
            </constraint>
        </property>
        <property name="plainPassword">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>register</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="min">8</option>
                <option name="max">4096</option>
                <option name="minMessage">Password must be at least {{ limit }} characters.</option>
                <option name="maxMessage">Password must be less than {{ limit }} characters.</option>
                <option name="groups">
                    <value>register</value>
                </option>
            </constraint>
        </property>
        <property name="firstName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>register</value>
                </option>
            </constraint>
        </property>
        <property name="lastName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>register</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>